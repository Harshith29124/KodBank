{
    "version": 2,
    "buildCommand": "vite build",
    "outputDirectory": "dist",
    "devCommand": "vite",
    "installCommand": "npm install",
    "framework": null,
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "/api/$1"
        },
        {
            "source": "/(.*)",
            "destination": "/index.html"
        }
    ],
    "env": {
        "DB_HOST": "@db_host",
        "DB_PORT": "@db_port",
        "DB_USER": "@db_user",
        "DB_PASSWORD": "@db_password",
        "DB_NAME": "@db_name",
        "JWT_SECRET": "@jwt_secret"
    }
}